li(class="mb-16")
  form(class="content-edit-form")
    div(class="app-input")
      label(class="app-input__label" data-tr-text="app_key")
      input(
        autocomplete="none"
        class="app-input__input"
        name="key"
        type="text"
      )
      span(class="app-input__error")
    div(class="app-input")
      label(class="app-input__label" data-tr-text="app_value")
      input(
        autocomplete="none"
        class="app-input__input"
        name="value"
        type="text"
      )
      span(class="app-input__error")
    div(class="content-edit-form__buttons")
      button(type="button" data-action="edit" data-tr-title="app_edit")
        i(class="fa-solid fa-pencil")
      button(type="button" class="mr-20" data-action="save" data-tr-title="app_save")
        i(class="fa-solid fa-floppy-disk")
      button(type="button" data-action="cancel" data-tr-title="app_cancel")
        i(class="fa-solid fa-xmark")